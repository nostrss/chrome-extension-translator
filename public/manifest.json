{
  "manifest_version": 3,
  "name": "Elm Panel Extension",
  "description": "Chrome extension with Elm-powered side panel",
  "version": "1.0.0",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "side_panel": {
    "default_path": "index.html"
  },
  "permissions": ["sidePanel"],
  "action": {
    "default_title": "Open Side Panel"
  }
}
